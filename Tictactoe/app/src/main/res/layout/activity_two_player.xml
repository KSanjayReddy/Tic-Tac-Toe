<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board"
    tools:context=".TwoPlayerActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="#96005494"
                android:id="@+id/namex"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:text="player1"
                android:textSize="30sp"/>
            <TextView
                android:background="#96e11c1c"
                android:id="@+id/namey"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:paddingRight="35dp"
                android:textAlignment="textEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="player2"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <TextView
                android:background="#96005494"
                android:id="@+id/scorex"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="0"
                android:textSize="38sp"/>
            <TextView
                android:background="#96e11c1c"
                android:id="@+id/scorey"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="38sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/whoseTurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="#0e0834"
                android:gravity="center"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        style="@style/gamebutton"
                        android:id="@+id/a1"
                        android:textColor="#000000"
                        android:background="@drawable/gamebutton"
                        android:shadowColor="#ffffff"
                        android:textAlignment="center"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />
                    <Button
                        style="@style/gamebutton"
                        android:id="@+id/a2"
                        android:textColor="#000000"
                        android:background="@drawable/gamebutton"
                        android:shadowColor="#ffffff"
                        android:textAlignment="center"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />
                    <Button
                        style="@style/gamebutton"
                        android:id="@+id/a3"
                        android:textColor="#000000"
                        android:background="@drawable/gamebutton"
                        android:shadowColor="#ffffff"
                        android:textAlignment="center"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        style="@style/gamebutton"
                        android:id="@+id/b1"
                        android:textColor="#000000"
                        android:background="@drawable/gamebutton"
                        android:shadowColor="#ffffff"
                        android:textAlignment="center"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />
                    <Button
                        style="@style/gamebutton"
                        android:id="@+id/b2"
                        android:textColor="#000000"
                        android:background="@drawable/gamebutton"
                        android:shadowColor="#ffffff"
                        android:textAlignment="center"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />
                    <Button
                        style="@style/gamebutton"
                        android:id="@+id/b3"
                        android:textColor="#000000"
                        android:background="@drawable/gamebutton"
                        android:shadowColor="#ffffff"
                        android:textAlignment="center"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        style="@style/gamebutton"
                        android:id="@+id/c1"
                        android:textColor="#000000"
                        android:background="@drawable/gamebutton"
                        android:shadowColor="#ffffff"
                        android:textAlignment="center"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />
                    <Button
                        style="@style/gamebutton"
                        android:id="@+id/c2"
                        android:textColor="#000000"
                        android:background="@drawable/gamebutton"
                        android:shadowColor="#ffffff"
                        android:textAlignment="center"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />
                    <Button
                        style="@style/gamebutton"
                        android:id="@+id/c3"
                        android:textColor="#000000"
                        android:background="@drawable/gamebutton"
                        android:shadowColor="#ffffff"
                        android:textAlignment="center"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
</ScrollView>
