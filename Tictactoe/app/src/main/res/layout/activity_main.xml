<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wall"
        android:orientation="vertical"
        android:paddingTop="70dp"
        android:paddingBottom="70dp"
        tools:context="com.tictactoe.hellboy.tictactoe.MainActivity">


        <Button
            android:layout_weight="1"
            android:id="@+id/single_id"
            android:text="Single Player"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A59EA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/two_id"
            android:text="Two Player"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A59EA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            />


        <Button
            android:layout_weight="1"
            android:id="@+id/rules_id"
            android:text="Rules"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A59EA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/exit_id"
            android:text="Exit"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A59EA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by: K Sanjay Reddy (CET BBSR)"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"/>



    </LinearLayout>



